{
  "name": "@quran/alislam",
  "version": "1.0.0",
  "description": "Islamic utilities: Quran, Hadith, Duas, Adhkar",
  
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },

  "files": ["dist"],

  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "dev": "tsup --watch"
  },

  "engines": {
    "node": ">=18.0.0"
  },

  "keywords": [
    "quran",
    "islam",
    "hadith",
    "dua",
    "adhkar",
    "azkar",
    "islamic",
    "quran-api",
    "nodejs",
    "typescript",
    "esm",
    "cjs"
  ],

  "author": "venixov",
  "license": "MIT",

  "repository": {
    "type": "git",
    "url": "https://github.com/deveni0/Alislam"
  },

  "bugs": {
    "url": "https://github.com/deveni0/Alislam/issues"
  },

  "homepage": "https://github.com/deveni0/Alislam#readme",

  "devDependencies": {
    "typescript": "^5.4.0",
    "tsup": "^8.0.0"
  }
}
